<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
    <ListView
        android:id="@+id/list_options"
        android:layout_width="match_parent"
        android:layout_weight="0.75"
        android:layout_height="0dp"
    />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <RelativeLayout
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_add_white_24dp"
            android:background="@drawable/circle"
            android:id="@+id/addButton"
            android:layout_marginRight="34dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/uploadButton"
            android:layout_toStartOf="@+id/uploadButton"
            android:layout_marginEnd="34dp" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_publish_white_24dp"
            android:background="@drawable/circle_upload"
            android:id="@+id/uploadButton"
            android:layout_alignTop="@+id/editButton"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_create_white_24dp"
            android:background="@drawable/circle_edit"
            android:id="@+id/editButton"
            android:layout_alignTop="@+id/addButton"
            android:layout_toRightOf="@+id/uploadButton"
            android:layout_toEndOf="@+id/uploadButton"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />
    </RelativeLayout>
</LinearLayout>